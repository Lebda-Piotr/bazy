<UserControl x:Class="bazy1.Views.Doctor.Pages.FirstLoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bazy1.Views.Doctor.Pages"
             xmlns:controls="clr-namespace:bazy1.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Ustaw nowe hasło" HorizontalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Text="Nowe hasło:" Margin="0,50,0,0"/>
        <controls:BindPasswordBox x:Name="PasswordBox" Margin="0,20,0,0"/>
        <TextBlock Text="Powtórz nowe hasło:" Margin="0,20,0,0"/>
        <Button Content="Zmień hasło" Height="30" Width="80" Margin="0,80,720,340"/>
    </Grid>
</UserControl>
