<Window x:Class="bazy1.Views.Receptionist.Pages.PatientsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PatientsView" Height="450" Width="800">
    <Grid>
        <!-- Górny box z przyciskiem wyloguj -->
        <Grid Height="50" Background="LightGray">
            <TextBlock Text="Lista pacjentów" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            <Button Content="Wyloguj" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Padding="5"/>
        </Grid>

        <!-- Lewy pasek boczny -->
        <StackPanel Width="150" Background="LightGray" HorizontalAlignment="Left">
            <Button Content="Pacjenci" Margin="10" Padding="5" HorizontalAlignment="Center"/>
            <Button Content="Wizyty" Margin="10" Padding="5" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Tabela z danymi pacjentów -->
        <ListView Margin="170,60,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Imiê" Width="100" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Nazwisko" Width="100" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Kontakt" Width="100" DisplayMemberBinding="{Binding Contact}"/>
                    <GridViewColumn Header="Nastêpna wizyta" Width="100" DisplayMemberBinding="{Binding NextAppointment}"/>
                    <GridViewColumn Header="Opcje" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Opcje" Click="ShowOptionsMenu_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
